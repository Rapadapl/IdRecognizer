<Window x:Class="IdRecognizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Id recognizer"
        Icon="pack://application:,,,/Resources/Icons/id_icon.png"
        Height="450" Width="850">

    <Window.Resources>
        <Style x:Key="MenuPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,6,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource MainBackgroundBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Managment panel-->
        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="6,0,6,0"
                Style="{StaticResource UnderlinedBorder}">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Style="{StaticResource MenuPanel}"
                            Grid.Column="0">

                    <Button Style="{StaticResource MyRoundButton}"
                            x:Name="OpenFileButton"
                            Click="OpenFileButton_Click">
                        <Image Source="pack://application:,,,/Resources/Icons/upload_image_icon.png"/>
                    </Button>

                    <TextBlock Style="{StaticResource UnderButtonText}"
                              Text="Открыть"/>

                </StackPanel>

                <StackPanel Style="{StaticResource MenuPanel}"
                            Grid.Column="1">

                    <Button Style="{StaticResource MyRoundButton}"
                            x:Name="ScanButton"
                            Click="ScanButton_Click">
                        <Image Source="pack://application:,,,/Resources/Icons/scan_image_icon.png"/>
                    </Button>

                    <TextBlock Text="Сканировать"
                               Style="{StaticResource UnderButtonText}"/>

                </StackPanel>

                <StackPanel Style="{StaticResource MenuPanel}"
                            Grid.Column="2">

                    <Button Style="{StaticResource MyRoundButton}"
                            x:Name="SaveButton"
                            Click="SaveButton_Click">
                        <Image Source="pack://application:,,,/Resources/Icons/save_icon.png"/>
                    </Button>

                    <TextBlock Text="Сохранить"
                               Style="{StaticResource UnderButtonText}"/>

                </StackPanel>
                
                <Image Grid.Column="3" 
                       RenderOptions.BitmapScalingMode="HighQuality"
                       HorizontalAlignment="Right"  VerticalAlignment="Center"
                       Margin="4,4,10,4"
                       x:Name="PostLogo"
                       MouseDown="PostLogo_MouseDown"
                       Source="pack://application:,,,/Resources/Icons/russian_post_logo.png"/>

            </Grid>
            
        </Border>

        <Image x:Name="IdScanImage"
               Grid.Row="1"
               Grid.Column="0"/>

        <!--Panel with data to check-->
        <Border Grid.Row="1"
                Grid.Column="1"
                 BorderThickness="2,0,0,0"
                Margin="0,6,6,6"
                BorderBrush="{StaticResource DividingBrush}">

            <Grid Margin="6,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Style="{StaticResource UnderlinedBorder}">
                    <TextBlock Text="Паспортные данные"
                               Style="{StaticResource UnderButtonText}"/>
                </Border>

                <!--Parsed data grid-->
                <Grid Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--1st name, second, middle, male, birth date, birth place-->
                    <Border Style="{StaticResource UnderlinedBorder}"
                            Grid.Row="0">
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Фамилия:"
                                       Style="{StaticResource SideText}"
                                       Grid.Row="0"
                                       Grid.Column="0"/>

                            <TextBlock Text="Имя:"
                                       Style="{StaticResource SideText}"
                                       Grid.Row="1"
                                       Grid.Column="0"/>

                            <TextBlock Text="Отчество:"
                                       Style="{StaticResource SideText}"
                                       Grid.Row="2"
                                       Grid.Column="0"/>

                            <Grid Grid.Row="3"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2">
                                
                            </Grid>

                            <TextBlock Style="{StaticResource SideText}"
                                       Grid.Row="4"
                                       Grid.Column="0">
                                Место <LineBreak/>рождения:
                            </TextBlock>

                        </Grid>
                    </Border>

                    <!--Series and number-->
                    <Border Style="{StaticResource UnderlinedBorder}"
                            Grid.Row="1">
                        <Grid>
                            <TextBlock Text="Серия:"
                                       Style="{StaticResource SideText}"
                                       Grid.Row="1"
                                       Grid.Column="0"/>
                        </Grid>
                    </Border>
                    
                </Grid>
                
            </Grid>
            
        </Border>
        
    </Grid>
    
</Window>
